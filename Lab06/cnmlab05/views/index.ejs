<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Danh sách môn học</title>
    <link rel="stylesheet" href="index.css">
    <style>
        .form-group {
            display: flex;
            flex-direction: column;
            width: 100%;
            max-width: 800px;
            margin-bottom: 10px;
        }
        .form-group input {
            padding: 10px;
            font-size: 16px;
            width: 100%;
        }
        table {
            width: 100%;
            max-width: 800px;
            border-collapse: collapse;
        }
        th, td {
            padding: 10px;
            border: 1px solid #ddd;
            text-align: left;
        }
        button {
            padding: 12px;
            background-color: blue;
            color: white;
            border: none;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="content">
        <h2>Danh sách môn học</h2>
        <table>
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Tên môn học</th>
                    <th>Loại môn học</th>
                    <th>Học kỳ</th>
                    <th>Khoa</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% courses.forEach((item, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= item.name %></td>
                        <td><%= item.courses_type %></td>
                        <td><%= item.semester %></td>
                        <td><%= item.department %></td>
                        <td>
                            <a href="/delete/<%= item.id %>" onclick="return confirm('Bạn có chắc muốn xoá?')">
                                <button style="background-color: red; color: white;">Xóa</button>
                            </a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
        
        <h3>Thêm môn học</h3>
        <form action="/save" method="post" style="max-width: 760px;">
            <div class="form-group">
                <input type="text" name="id" placeholder="Nhập id" required>
            </div>
            <div class="form-group">
                <input type="text" name="name" placeholder="Nhập tên môn học" required>
            </div>
            <div class="form-group">
                <input type="text" name="courses_type" placeholder="Nhập loại môn học" required>
            </div>
            <div class="form-group">
                <input type="text" name="semester" placeholder="Nhập học kỳ" required>
            </div>
            <div class="form-group">
                <input type="text" name="department" placeholder="Nhập khoa" required>
            </div>
            <button type="submit">Thêm môn học</button>
        </form>
    </div>
</body>
</html>
